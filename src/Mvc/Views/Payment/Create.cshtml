@model PaymentViewModel

@{
    Layout = "_LayoutAdmin";
}

@{
    ViewData["Title"] = "Registrar pago";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Registrar pago</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Amount" class="control-label">Importe</label>
                            <input asp-for="Amount"
                                   type="number"
                                   step="0.01"
                                   class="form-control"
                                   placeholder="10.000,00" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MemberId" class="control-label"></label>
                            <select asp-for="MemberId" class="form-control" asp-items="ViewBag.Members">
                                <option selected="selected" value="">Elegir socio</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">Agregar pago</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
