@model Mvc.Models.ErrorViewModel
@{
    ViewData["Title"] = "Ocurrió un error";
}

<div class="container py-5">
    <h1 class="mb-3">Ocurrió un error inesperado</h1>
    <p class="text-muted">
        Estamos teniendo un problema al procesar tu solicitud.
        Si el error persiste, contactanos e indicá el código de seguimiento.
    </p>

    @if (Model.ShowRequestId)
    {
        <div class="mt-4">
            <strong>Código de seguimiento:</strong>
            <code>@Model.RequestId</code>
        </div>
    }

    <div class="mt-4 d-flex gap-2">
        <a class="btn btn-primary" href="/">Volver al inicio</a>
        <button class="btn btn-outline-secondary" onclick="history.back()">Volver</button>
    </div>
</div>
